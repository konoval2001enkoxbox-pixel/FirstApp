@using FirstApp.View.Service
@inject NotificationService NotificationService
@code {
    public string Title { get; set; }
    public string Message { get; set; }
    public bool Visible { get; set; }

    private void Close()
    {
        Visible = false;
    }

    public void Show(string message, string title)
    {
        Title = title;
        Message = message;
        Visible = true;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        NotificationService.RegisterAlert(this);
    }
}

<div class="alert-dialog" style="display: @(Visible ? "block" : "none")">
    <div class="alert-dialog-content">
        <h3>@Title</h3>
        <p>@Message</p>
        <button @onclick="Close">Close</button>
    </div>
</div>
<div class="alert-dialog-overlay" style="display: @(Visible ? "block" : "none")" @onclick="Close"></div>
